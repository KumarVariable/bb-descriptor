{
  "key": "ai.kunal.bitbucket.aol.code.review",
  "name": "Coder Review Agent",
  "description": "AI-assisted code review and automated fix suggestions for Bitbucket pull requests.",
  "vendor": {
    "name": "Kunal Kumar",
    "url": "https://staging.bito.ai/"
  },
  "baseUrl": "https://staging.bito.ai/agent-integration/int/api/v1",
  "apiVersion": 1,
  "authentication": {
    "type": "jwt"
  },
  "lifecycle": {
    "installed": "/installed",
    "uninstalled": "/uninstalled"
  },
  "modules": {
    "webhooks": [
      { "event": "pullrequest:created",   "url": "/webhook/bitbucket" },
      { "event": "pullrequest:updated",   "url": "/webhook/bitbucket" },
      { "event": "pullrequest:fulfilled", "url": "/webhook/bitbucket" },
      { "event": "pullrequest:rejected",  "url": "/webhook/bitbucket" },
      { "event": "pullrequest:comment_created", "url": "/webhook/bitbucket" },
      { "event": "pullrequest:comment_updated", "url": "/webhook/bitbucket" }
    ]
  },
  "scopes": ["account", "repository", "pullrequest"],
  "contexts": ["account", "repository"]
}
